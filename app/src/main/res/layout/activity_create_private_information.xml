<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreatePrivateInformation">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" tools:ignore="MissingConstraints"
                  android:id="@+id/title_layout" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:text="Private Information Registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/registration_title"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>
        <TextView
                android:text="Personal information is the basis for selling your information, but it is not exposed outside."
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/registration_descript"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>
    </LinearLayout>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/title_layout"
                android:layout_marginTop="120dp" tools:layout_editor_absoluteX="0dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" tools:ignore="MissingConstraints"
                      android:id="@+id/content_layout">
            <TextView
                    android:text="Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

            <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:id="@+id/gender_spinner"
                    android:layout_gravity="center"
                    android:textColor="#000"/>

            <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:id="@+id/others_gender_spinner"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:visibility="gone"/>

            <EditText android:layout_width="300dp"
                      android:layout_height="wrap_content"
                      android:inputType="text"
                      android:ems="10"
                      android:drawableLeft="@drawable/ic_wc_black_24dp"
                      android:id="@+id/gender_text"
                      android:textColor="#000"
                      android:drawablePadding="20dp"
                      android:textColorHint="#999"
                      android:textSize="18dp"
                      android:layout_gravity="center"
                      android:hint="Input Your Gender"
                      android:visibility="gone"/>

            <TextView
                    android:text="Bitrh Year &amp; Month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_gravity="center">
                <EditText android:layout_width="200dp"
                          android:layout_height="wrap_content"
                          android:inputType="number"
                          android:ems="10"
                          android:drawableLeft="@drawable/ic_cake_black_24dp"
                          android:id="@+id/birth_year"
                          android:textColor="#000"
                          android:drawablePadding="20dp"
                          android:textColorHint="#999"
                          android:textSize="18dp"
                          android:layout_gravity="center"
                          android:hint="Birth Year"
                          android:visibility="visible"/>
                <EditText android:layout_width="100dp"
                          android:layout_height="wrap_content"
                          android:inputType="number"
                          android:ems="10"
                          android:id="@+id/birth_month"
                          android:textColor="#000"
                          android:drawablePadding="20dp"
                          android:textColorHint="#999"
                          android:textSize="18dp"
                          android:layout_gravity="center"
                          android:hint="Month"
                          android:visibility="visible"/>
            </LinearLayout>

            <TextView
                    android:text="Race"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

            <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:id="@+id/race_spinner"
                    android:layout_gravity="center"
                    android:textColor="#000"/>
            <EditText android:layout_width="300dp"
                      android:layout_height="wrap_content"
                      android:inputType="text"
                      android:ems="10"
                      android:drawableLeft="@drawable/ic_group_black_24dp"
                      android:id="@+id/race_text"
                      android:textColor="#000"
                      android:drawablePadding="20dp"
                      android:textColorHint="#999"
                      android:textSize="18dp"
                      android:layout_gravity="center"
                      android:hint="Input Your Race"
                      android:visibility="gone"/>

            <TextView
                    android:text="Residence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

            <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:id="@+id/country_spinner"
                    android:layout_gravity="center"
                    android:textColor="#000"/>
            <EditText android:layout_width="300dp"
                      android:layout_height="wrap_content"
                      android:inputType="text"
                      android:ems="10"
                      android:drawableLeft="@drawable/ic_public_black_24dp"
                      android:id="@+id/country_text"
                      android:textColor="#000"
                      android:drawablePadding="20dp"
                      android:textColorHint="#999"
                      android:textSize="18dp"
                      android:layout_gravity="center"
                      android:hint="Input Your Country"
                      android:visibility="gone"/>

            <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:id="@+id/admin_spinner"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:visibility="gone"/>
            <EditText android:layout_width="300dp"
                      android:layout_height="wrap_content"
                      android:inputType="text"
                      android:ems="10"
                      android:drawableLeft="@drawable/ic_public_black_24dp"
                      android:id="@+id/admin_text"
                      android:textColor="#000"
                      android:drawablePadding="20dp"
                      android:textColorHint="#999"
                      android:textSize="18dp"
                      android:layout_gravity="center"
                      android:hint="Input Your Admin"
                      android:visibility="gone"/>

            <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:id="@+id/city_spinner"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:visibility="gone"/>
            <EditText android:layout_width="300dp"
                      android:layout_height="wrap_content"
                      android:inputType="text"
                      android:ems="10"
                      android:drawableLeft="@drawable/ic_public_black_24dp"
                      android:id="@+id/city_text"
                      android:textColor="#000"
                      android:drawablePadding="20dp"
                      android:textColorHint="#999"
                      android:textSize="18dp"
                      android:layout_gravity="center"
                      android:hint="Input Your City"
                      android:visibility="gone"/>

            <TextView
                    android:text="Job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

            <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:id="@+id/job1_spinner"
                    android:layout_gravity="center"
                    android:textColor="#000"/>

            <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:id="@+id/job2_spinner"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:visibility="gone"/>

            <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:id="@+id/job3_spinner"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:visibility="gone"/>

            <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:id="@+id/job4_spinner"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:visibility="gone"/>

            <EditText android:layout_width="300dp"
                      android:layout_height="wrap_content"
                      android:inputType="text"
                      android:ems="10"
                      android:drawableLeft="@drawable/ic_business_center_black_24dp"
                      android:id="@+id/job_text"
                      android:textColor="#000"
                      android:drawablePadding="20dp"
                      android:textColorHint="#999"
                      android:textSize="18dp"
                      android:layout_gravity="center"
                      android:hint="Input Your JOB"
                      android:visibility="gone"/>

            <TextView
                    android:text="Annual Income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

            <EditText android:layout_width="300dp"
                      android:layout_height="wrap_content"
                      android:inputType="number"
                      android:ems="10"
                      android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                      android:id="@+id/annual_income"
                      android:textColor="#000"
                      android:drawablePadding="20dp"
                      android:textColorHint="#999"
                      android:textSize="18dp"
                      android:layout_gravity="center"
                      android:hint="Input Your Income"/>

            <TextView
                    android:text="Level of Education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"/>

            <Spinner
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:id="@+id/edu_spinner"
                    android:layout_gravity="center"
                    android:textColor="#000"/>

            <EditText android:layout_width="300dp"
                      android:layout_height="wrap_content"
                      android:inputType="text"
                      android:ems="10"
                      android:drawableLeft="@drawable/ic_import_contacts_black_24dp"
                      android:id="@+id/edu_text"
                      android:textColor="#000"
                      android:drawablePadding="20dp"
                      android:textColorHint="#999"
                      android:textSize="18dp"
                      android:layout_gravity="center"
                      android:hint="Input Your JOB"
                      android:visibility="gone"/>

            <Button android:layout_width="200sp" android:layout_height="40sp"
                    android:id="@+id/submit"
                    android:text="Submit"
                    android:textSize="18sp"
                    android:background="@drawable/rounded_button"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>